{
  "name": "webMud",
  "version": "0.0.0",
  "description": "A MUD client",
  "main": "index.tsx",
  "directories": {
    "test": "test"
  },
  "jest": {
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "\\.spec\\.ts$",
    "testPathIgnorePatterns": [
      ".bakup"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "start": "webpack-dev-server",
    "build-server": "tsc --outDir server.out server/*",
    "build-server-watch": "npm run build-server -- --watch",
    "build-client": "webpack --config ./webpack.config.js",
    "build": "npm run build-server && npm run build-client",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --coverage",
    "upload-coverage": "cat ./coverage/lcov.info | coveralls",
    "lint": "tslint -c tslint.json --type-check --project tsconfig.json 'src/**/*.ts' 'src/**/*.tsx'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amatiasq/webMud.git"
  },
  "author": "A. Mat√≠as Quezada <amatiasq@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amatiasq/webMud/issues"
  },
  "devDependencies": {
    "@types/express": "^4.0.36",
    "@types/jest": "^20.0.2",
    "@types/node": "^8.0.7",
    "@types/react": "^15.0.33",
    "@types/react-dom": "^15.5.1",
    "@types/socket.io": "^1.4.29",
    "@types/socket.io-client": "^1.4.29",
    "coveralls": "^2.13.1",
    "css-loader": "^0.28.4",
    "jest": "^20.0.4",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "ts-jest": "^20.0.6",
    "ts-loader": "^2.2.0",
    "tslint": "^5.4.3",
    "tslint-language-service": "^0.9.6",
    "typescript": "^2.4.1",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  },
  "homepage": "https://github.com/amatiasq/webMud#readme",
  "dependencies": {
    "express": "^4.15.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3"
  }
}
