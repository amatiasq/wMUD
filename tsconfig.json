{
  "include": [ "src/**/*.ts", "src/**/*.tsx" ],
  "exclude": [ "node_modules" ],

  "compilerOptions": {
    "noImplicitAny": true,
    "experimentalDecorators": true,

    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "plugins": [
      { "name": "tslint-language-service" }
    ]
  }
}
