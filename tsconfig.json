{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "server/**/*.ts"
  ],
  "exclude": [ "node_modules" ],

  "compilerOptions": {
    "outDir": "server.out",
    "noImplicitAny": true,
    "experimentalDecorators": true,

    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "plugins": [
      { "name": "tslint-language-service" }
    ]
  }
}
